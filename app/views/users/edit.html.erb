<h1>Edit Profile</h1>
<hr>
  <div class="col-md-6">
  <h3>Username: <%= current_user.username %></h3>

  <p class='text-muted'>Please fill out the information to update.</p>

  <%= form_tag edit_user_path, :html => {:class => "form-group col-md-6"}  do %>
  <div class="">
    <%= label_tag :location %>
    <%= text_field_tag :location, nil, class: "form-control" %>
  </div>
  <div class="">
    <%= label_tag :bio %>
    <%= text_area_tag :bio, nil, class: "form-control" %>
  </div>
  <br />
  <%= submit_tag 'Submit', class: "btn btn-primary pull-right"  %>
  <% end %>
